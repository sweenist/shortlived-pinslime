{
  "name": "shortlived-slime",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.test.json && vite build",
    "build:post": "sed -i \"s|url(\\([^']*\\))|url(../\\1)|g\" dist/assets/*.css",
    "package": "rm ../pinslime.zip && cd dist && zip -r ../../pinslime.zip .",
    "preview": "vite preview",
    "test": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "test:watch": "vitest --config vitest.config.ts"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
